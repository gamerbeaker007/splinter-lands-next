# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for all text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sql text eol=lf
*.prisma text eol=lf
*.sh text eol=lf
*.mjs text eol=lf

# Keep Windows line endings for these
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.avif binary
*.webp binary
